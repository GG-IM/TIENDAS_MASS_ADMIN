              "console.log('‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê');",
              "",
              "// PASO 1: Define tus valores reales aqu√≠",
              "const PRECIO_PRODUCTO = 100;  // ‚Üê CAMBIA ESTO por el precio real de tu producto ID 1",
              "const CANTIDAD = 1;",
              "const PRECIO_ENVIO = 10;      // ‚Üê CAMBIA ESTO por el precio de tu m√©todo de env√≠o ID 1",
              "const COMISION_PAGO = 0;      // ‚Üê CAMBIA ESTO por la comisi√≥n % de tu m√©todo de pago ID 1",
              "",
              "// PASO 2: C√°lculos autom√°ticos",
              "const subtotal = PRECIO_PRODUCTO * CANTIDAD;",
              "const impuestos = Math.round(subtotal * 0.08 * 100) / 100;",
              "const envio = PRECIO_ENVIO;",
              "const base = subtotal + impuestos + envio;",
              "const comision = Math.round(base * (COMISION_PAGO / 100) * 100) / 100;",
              "const montoTotal = Math.round((subtotal + impuestos + envio + comision) * 100) / 100;",
              "",
              "// PASO 3: Mostrar c√°lculos",
              "console.log('Subtotal:', subtotal, 'PEN');",
              "console.log('Impuestos (8%):', impuestos, 'PEN');",
              "console.log('Env√≠o:', envio, 'PEN');",
              "console.log('Comisi√≥n (' + COMISION_PAGO + '%):', comision, 'PEN');",
              "console.log('‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ');",
              "console.log('üí∞ MONTO TOTAL:', montoTotal, 'PEN');",
              "console.log('‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê');",
              "console.log('');",
              "console.log('‚ö†Ô∏è COPIA ESTE VALOR AL CAMPO montoTotal:');",
              "console.log(montoTotal);",
              "console.log('');"
            ],
