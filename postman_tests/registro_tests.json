{
  "info": {
    "name": "TiendasMass - Registro Tests",
    "_postman_id": "tiendas-mass-registro-tests",
    "description": "Pruebas de integración para el endpoint de registro de usuarios",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Registro Exitoso",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Usuario Nuevo\",\n  \"email\": \"nuevo_usuario@example.com\",\n  \"password\": \"Password123\",\n  \"direccion\": \"Calle Principal 123\",\n  \"telefono\": \"1234567890\",\n  \"ciudad\": \"Ciudad Ejemplo\",\n  \"codigoPostal\": \"12345\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/usuarios/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "usuarios", "register"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Código de estado es 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Respuesta contiene ID de usuario\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('id');",
              "    pm.expect(jsonData.id).to.be.a('number');",
              "});",
              "",
              "pm.test(\"Respuesta contiene propiedades obligatorias del usuario\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('nombre');",
              "    pm.expect(jsonData).to.have.property('email');",
              "    pm.expect(jsonData).to.have.property('direccion');",
              "    pm.expect(jsonData).to.have.property('telefono');",
              "    pm.expect(jsonData).to.have.property('ciudad');",
              "    pm.expect(jsonData).to.have.property('codigoPostal');",
              "});",
              "",
              "pm.test(\"Respuesta contiene estado y rol\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('estado');",
              "    pm.expect(jsonData.estado).to.have.property('id');",
              "    pm.expect(jsonData.estado).to.have.property('nombre');",
              "    pm.expect(jsonData).to.have.property('rol');",
              "    pm.expect(jsonData.rol).to.have.property('id');",
              "    pm.expect(jsonData.rol).to.have.property('nombre');",
              "});",
              "",
              "pm.test(\"No se devuelve la contraseña en la respuesta\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.not.have.property('password');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Registro Fallido - Email Duplicado",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Usuario Duplicado\",\n  \"email\": \"nuevo_usuario@example.com\",\n  \"password\": \"Password123\",\n  \"direccion\": \"Calle Principal 123\",\n  \"telefono\": \"1234567890\",\n  \"ciudad\": \"Ciudad Ejemplo\",\n  \"codigoPostal\": \"12345\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/usuarios/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "usuarios", "register"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Código de estado es 400\", function () {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test(\"Mensaje de error indica que el usuario ya existe\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('message');",
              "    pm.expect(jsonData.message).to.equal('El usuario ya existe');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
